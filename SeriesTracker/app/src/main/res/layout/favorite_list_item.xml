<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="@dimen/default_episode_description_margin_bottom"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="@dimen/default_spacing_medium"

        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/favorite_item_icon_heart"
            >
        </View>

    </FrameLayout>
    <TextView
        android:layout_width="@dimen/default_episode_header_height"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_episode_clock_margin"
        android:layout_marginLeft="@dimen/card_content_margin"
        android:textSize="@dimen/default_textSize_medium"
        android:textColor="@color/default_textColor_fourth"
        android:id="@+id/favoriteShow"
        android:fontFamily="Roboto-Regular"
        android:layout_marginBottom="@dimen/default_episode_description_margin_top"
        />

</LinearLayout>
