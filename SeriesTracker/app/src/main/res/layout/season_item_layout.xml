<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/default_season_year_width"
        android:layout_height="@dimen/default_show_favorite_button_margin_top"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/default_spacing_small"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/seasonMainImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_season_thumbnail__height"
                android:contentDescription="the main image of the season" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto-Medium"
                    android:textColor="@color/default_textColor_fourth"
                    android:textSize="@dimen/default_textSize_small"
                    android:id="@+id/seasonNumber"
                    android:layout_marginLeft="@dimen/default_episode_description_margin_top"
                    />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_textSize_verySmall"
                android:textColor="@color/default_show_episodenumber"
                android:id="@+id/episodesNumber"
                android:layout_marginLeft="@dimen/default_episode_description_margin_top"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
