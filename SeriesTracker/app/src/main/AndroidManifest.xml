<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.movile.up.seriestracker" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--
 Style da aplicacao, estilo (o css do android)
        subclasses do css sao importantes, <style name=""> permite overwrite
        nao colocar coisas especificas de layout e posicionamento, mesma coisa do html
        adicione o estilo com style="
        -->
        <activity
            android:name=".activities.SeasonDetailsActivity"
            android:label="@string/title_activity_season_details" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.movile.up.seriestracker.configuration.GlideConfiguration"
            android:value="GlideModule" />

        <activity
            android:name=".activities.EpisodeDetailsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
